@{
    ViewBag.Title = "Home Page";

    var lgas = ViewBag.Lgas;
}

<div class="row">
    <div class="col-md-12">
        <h1>Generate plate numbers</h1>

        <form method="post" action="@Url.Action("Generate", "Home")" class="form-inline">
            <div class="form-group">
                <label for="Lga">LGA:</label>
                @Html.DropDownList("lga", new SelectList(lgas, "Code", "Code"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="count">Number of plates:</label>
                <select name="count" class="form-control">
                    <option value="1">1</option>
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                </select> 
            </div>
            <button type="submit" class="btn btn-primary">Generate</button>
        </form>
    </div>
</div>